{
  "manifest_version": 2,

  "name": "Don't...",
  "description": "Need to cut spending? This'll do the trick. ",
  "version": "0.1",

  "browser_action": {
   "default_icon": "icon.png"
   //add the backround.html with an activation button
  },
  
  "background": {
    "page": "background.html",
    "persistent": false
  },
  
  "permissions": [
   "activeTab"
   ],
   "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "http://*.amazon.com/*",
        "https://*.ebay.com/*",
        "http://*.ebay.com/*",
        "https://*.etsy.com/*",
        "http://*.etsy.com/*"
      ],
      "js": [
        "buttonKiller.js"
      ]
    }
  ]
}